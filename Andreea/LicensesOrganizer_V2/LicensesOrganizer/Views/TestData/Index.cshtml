
@{
    ViewBag.Title = "Index";
}

<div class="tableLayout-container">
    <table id="paginator">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fisrt-name</th>
                <th>Last-name</th>
                <th>Email</th>
                <th>Gender</th>
            </tr>
        </thead>
        <tbody>
            <tr class="odd">
                <td>1</td>
                <td>Andreea</td>
                <td>Iliuta</td>
                <td>ilitaandreea@gmail.com</td>
                <td>female</td>
            </tr>
            <tr class="even">
                <td>2</td>
                <td>Oana</td>
                <td>Ioana</td>
                <td>ioana@gmail.com</td>
                <td>female</td>
            </tr>
        </tbody>
     </table>
    <div class="paging-container">
        <div class="manage-pages">
            <div id="first-page"><a class="button-first-page">&laquo</a></div>
            <div id="previous-page"><a class="button-previous-page" href="#">&lt</a></div>
            <div id="current-page">
                <span>
                    <a class="button-current-page" onclick="getGridData(1)">1</a>
                    <a class="button-current-page" onclick="getGridData(2)">2</a>
                    <a class="button-current-page" onclick="getGridData(3)">3</a>
                    <a class="button-current-page" onclick="getGridData(4)">4</a>
                    <a class="button-current-page" onclick="getGridData(5)">5</a>
                </span>
            </div>
            <div id="next-page"><a class="button-next-page" href="#">&gt</a></div>
            <div id="last-page"><a class="button-last-page" href="#">&raquo</a></div>
        </div>

        <div class="manage-items-per-page">
            <div class="items-per-page-container">
                <div id="label-items"> <p>Show</p></div>
                <div id="drop-down-items-per-pag">
                    <select id="items-select">
                        <option value="10" selected="selected">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>
                </div>
                <div id="label-items"> <p>entries</p></div>
                <div class="current-items"><p>per page</p></div>
            </div>
        </div>
    </div>
</div>

@section scripts 
{
    <script src="@Url.Content("~/bundles/datagrid")"></script>
}